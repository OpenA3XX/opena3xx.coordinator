{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "System": "Warning",
      "Microsoft.AspNetCore.Authentication": "Information"
    }
  },
  "AllowedHosts": "*",
  
  "OpenA3XX": {
    "Database": {
      "Path": ""
    },
    "Api": {
      "BaseUrl": "http://localhost:5000",
      "AllowedCorsOrigins": [
        "http://localhost",
        "http://localhost:3000",
        "http://localhost:4200"
      ]
    }
  },

  "RabbitMQ": {
    "HostName": "localhost",
    "Port": 5672,
    "Username": "opena3xx",
    "Password": "opena3xx",
    "VirtualHost": "/",
    "ConnectionTimeout": 10,
    "SocketReadTimeout": 10,
    "SocketWriteTimeout": 10,
    "ClientProvidedName": "app:opena3xx.peripheral.webapi",
    "Exchanges": {
      "KeepAlive": {
        "Name": "keepalive",
        "Type": "fanout"
      },
      "HardwareInputSelectors": {
        "Name": "hardware-input-selectors", 
        "Type": "fanout"
      }
    },
    "Queues": {
      "SimulatorTestEvents": "simulator_test_events",
      "ProcessorMsfs": "processor-msfs"
    }
  },

  "FlightSimulator": {
    "Connection": {
      "HostName": "127.0.0.1",
      "Port": 500,
      "Protocol": "Ipv4",
      "ApplicationName": "OpenA3XX-Coordinator"
    }
  },

  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.Seq"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning",
        "Microsoft.AspNetCore.Authentication": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}{NewLine}",
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithAssemblyName", 
      "WithProcessId",
      "WithProcessName",
      "WithThreadId",
      "WithThreadName",
      "WithCorrelationId",
      "WithAssemblyInformationalVersion",
      "WithEnvironment"
    ]
  },

  "ExternalServices": {
    "CoordinatorApi": {
      "BaseUrl": "http://localhost:5000",
      "Endpoints": {
        "HardwareInputSelectors": "hardware-input-selectors"
      }
    }
  }
}
