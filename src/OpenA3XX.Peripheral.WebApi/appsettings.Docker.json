{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "System": "Warning",
      "Microsoft.AspNetCore.Authentication": "Information"
    }
  },
  "AllowedHosts": "*",
  
  "OpenA3XX": {
    "Database": {
      "Path": "/app/data/opena3xx.database"
    },
    "Api": {
      "BaseUrl": "http://0.0.0.0:8080",
      "AllowedCorsOrigins": [
        "http://localhost",
        "http://localhost:3000",
        "http://localhost:4200",
        "http://host.docker.internal:3000",
        "http://host.docker.internal:4200"
      ]
    }
  },
  
  "ExternalServices": {
    "HubHopApi": {
      "BaseUrl": "https://hubhop-api-mgtm.azure-api.net",
      "PresetsEndpoint": "api/v1/fs2020/presets",
      "TimeoutSeconds": 30,
      "AutoSyncOnStartup": false,
      "AutoSyncIntervalMinutes": 0,
      "MaxRetries": 3
    },
    "CoordinatorApi": {
      "BaseUrl": "http://localhost:8080",
      "Endpoints": {
        "HardwareInputSelectors": "hardware-input-selectors"
      }
    }
  },

  "RabbitMQ": {
    "HostName": "rabbitmq",
    "Port": 5672,
    "Username": "opena3xx",
    "Password": "opena3xx",
    "VirtualHost": "/",
    "ConnectionTimeout": 10,
    "SocketReadTimeout": 10,
    "SocketWriteTimeout": 10,
    "ClientProvidedName": "app:opena3xx.peripheral.webapi",
    "Exchanges": {
      "KeepAlive": {
        "Name": "keepalive",
        "Type": "fanout"
      },
      "HardwareInputSelectors": {
        "Name": "hardware-input-selectors", 
        "Type": "fanout"
      }
    },
    "Queues": {
      "SimulatorTestEvents": "simulator_test_events",
      "ProcessorMsfs": "processor-msfs"
    },
    "ExchangeBindings": {
      "KeepAlive": "opena3xx-keepalive-events|admin.keepalive,KeepAlive",
      "HardwareInputSelectors": "opena3xx-hardware-input-selectors-events|admin.hardware-input-selectors,HardwareEvent"
    }
  },

  "FlightSimulator": {
    "Connection": {
      "HostName": "host.docker.internal",
      "Port": 500,
      "Protocol": "Ipv4",
      "ApplicationName": "OpenA3XX-Coordinator"
    }
  },

  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.Seq"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning",
        "Microsoft.AspNetCore.Authentication": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}{NewLine}",
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://seq:5341"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithAssemblyName", 
      "WithProcessId",
      "WithProcessName",
      "WithThreadId",
      "WithThreadName",
      "WithCorrelationId",
      "WithAssemblyInformationalVersion",
      "WithEnvironment"
    ],
    "Seq": {
      "Host": "seq",
      "Port": 5341
    }
  }
} 